<script type="text/javascript">
 $(function(){
	 var flag;
	 var args = window.location.search.substr(1);
	args = args.replace(/&/g,",");
	var d_arr = args.split(",");
	var obj = new Object();
	for ( i = 0; i < d_arr.length ; i++)
	{
		var d_arr_str = d_arr[i].split("=");
		obj[d_arr_str[0]] = d_arr_str[1];
	}
	$("#radom").val(obj.radom);
	$("#mainid").val(obj.mainid);
	$("#sub").click(function(){
		var data = new Object();
		var obj = new Array();
		var obj1 = new Array();
		for(var i = 1 ; i < 6 ; i ++){
			 if($("input[name='td_"+i+"']:checked").val() == undefined){
				$("#check_num_info").html("第"+i+"栏有未选项");
				flag = false;
				break;
			 }else{
				 flag =true;
				 obj.push($("input[name='td_"+i+"']:checked").val());
				 $("#check_num_info").html("");
			 }
		}
		
		if(flag){
			$("input[name='tm_5']:checkbox:checked").each(function(){ 
				obj1.push($(this).val());
			}) 
			if(obj1.length == 0){
				$("#check_num_info").html("第6栏有未选项");
				flag = false;
			}else{
				flag = true;
			}
			if(flag && obj1.indexOf("7") != -1){
				data.three = $.trim($("#qt").val()).length != 0  ? encodeURI($.trim($("#qt").val())) : "";
			}
		}
		
		if(flag){
			data.one = obj;
			data.two = obj1;
			//数据交互
			$.ajax({
				type: "POST",
				url: "mzpc!saveType3pdf.action",
				cache: false,
				data: {"json":JSON.stringify(data),"mainid":$("#mainid").val(),"radom":$("#radom").val(),msg:$.trim($("#msg").val()).length != 0 ? encodeURI($("#msg").val()) : ""},
				success: function(data){
					var res = (new Function("","return " + data))();
					if(res.msg == "ok"){
						window.parent.showMsg("提交成功！");
						window.parent.clearNewTab();
						//$(window.parent.document).find("#span_close_tab_" + obj.mainid).click();
					}else{
						window.parent.showMsg(res.msg);
					}
				}
			})
		}
	});
 });
